#! /bin/bash

text=""
case "$1" in
    # python 
    **.py)
        text1=$(which python3)
        text2="def main():"
        text3="    pass"
        text4="if __name__ == \"__main__\":"
        text5="    main()"
        printf "#!%s\n\n%s\n%s\n\n\n%s\n%s\n" "$text1" "$text2" "$text3" "$text4" "$text5" | 
            cat > "$1"; chmod 744 "$1"
        ;;

    # javascript 
    **.js)
        text=$(which node)
        printf "#!%s\n" "$text" | cat > "$1"; chmod 774 "$1"
        ;;

    # bash  
    **.sh)
        text=$(which bash)
        printf "#!%s" "$text" | cat > "$1"; chmod 744 "$1"
        ;;

    # c
    **.c)
        text1="#include<stdio.h>"
        text2="int main(){"
        text3="}"
        printf "%s\n\n%s\n%s" "$text1" "$text2" "$text3" | cat > "$1";
        ;;

    **.cpp)
        text1="#include<iostream>"
        text2="using namespace std;"
        text3="int main(){"
        text4="}"
        printf "%s\n%s\n\n%s\n%s" "$text1" "$text2" "$text3" "$text4" | cat > "$1";
        ;;

    # else 
    *)
        touch "$1"
    ;;
esac

# start shellcheck-all
# 
# In touch-f line 7:
#         text1=$(which python3)
#                 ^---^ SC2230: which is non-standard. Use builtin 'command -v' instead.
# 
# 
# In touch-f line 18:
#         text=$(which node)
#                ^---^ SC2230: which is non-standard. Use builtin 'command -v' instead.
# 
# 
# In touch-f line 24:
#         text=$(which bash)
#                ^---^ SC2230: which is non-standard. Use builtin 'command -v' instead.
# 
# For more information:
#   https://www.shellcheck.net/wiki/SC2230 -- which is non-standard. Use builti...
